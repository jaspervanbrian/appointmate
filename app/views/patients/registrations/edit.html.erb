<main class="d-flex align-items-center py-4">
  <div class="form-signin w-100 m-auto" style="max-width: 75%">
    <div class="d-flex align-items-center mb-3">
      <h3 class="h5 d-inline m-0 fw-normal">Your Profile</h1>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="personal-info-tab" data-bs-toggle="tab" data-bs-target="#personal-info" type="button" role="tab" aria-controls="personal-info" aria-selected="true">
            Personal Info
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">
            Contact and Address Info
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="account-info-tab" data-bs-toggle="tab" data-bs-target="#account-info" type="button" role="tab" aria-controls="account-info" aria-selected="false">
            Account Info
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="medicare-tab" data-bs-toggle="tab" data-bs-target="#medicare" type="button" role="tab" aria-controls="medicare" aria-selected="false">
            Medicare
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="private-health-insurance-tab" data-bs-toggle="tab" data-bs-target="#private-health-insurance" type="button" role="tab" aria-controls="private-health-insurance" aria-selected="false">
            Private Health Insurance
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button type="button" class="nav-link text-danger" data-bs-toggle="modal" data-bs-target="#account-cancellation">
            Account Cancellation
          </button>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane pt-4 fade show active" id="personal-info" role="tabpanel" aria-labelledby="personal-info-tab">
          <%= render "personal_info", f: f %>
        </div>
        <div class="tab-pane pt-4 fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
          <%= render "contact_info", f: f %>
        </div>
        <div class="tab-pane pt-4 fade" id="account-info" role="tabpanel" aria-labelledby="account-info-tab">
          <%= render "account_info", f: f %>
        </div>
        <div class="tab-pane pt-4 fade" id="medicare" role="tabpanel" aria-labelledby="medicare-tab">
          <%= render "medicare_info", f: f %>
        </div>
        <div class="tab-pane pt-4 fade" id="private-health-insurance" role="tabpanel" aria-labelledby="private-health-insurance-tab">
          <%= render "private_health_insurance_info", f: f %>
        </div>
      </div>

      <%= render "patients/shared/error_messages", resource: resource %>

      <div class="actions mb-3">
        <button type="button" class="btn btn-primary py-2" data-bs-toggle="modal" data-bs-target="#submit-profile-changes">
          Update Profile
        </button>
      </div>

      <%= render "submit_profile_changes", f: f %>
      <%= render "account_cancellation", f: f %>
    <% end %>
  </div>
</main>

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex align-items-center justify-content-between">
        <h1 class="fw-bold mb-6">Create a booking type</h1>
        <% if current_patient&.booking_link? %>
          <%= link_to "View live page", patient_path(booking_link: current_patient.booking_link), class: "text-gray" %>
        <% end%>
      </div>

      <%= render "form", booking_type: @booking_type %>

      <br>

      <div>
        <%= link_to "Back to booking types", booking_types_path %>
      </div>
    </div>
  </div>
</div>

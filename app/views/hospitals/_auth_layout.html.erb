<%
  subtitle ||= ""
  title ||= "" %>
<div class="items-start justify-center block h-full grid-cols-1 gap-4 lg:grid lg:items-center lg:grid-cols-2 bg-gradient-to-tr from-black to-gray-600">
  <div class="relative flex items-center justify-center overflow-hidden lg:h-screen">
    <div class="inset-auto z-30 flex items-center justify-center flex-1 w-full h-auto font-sans text-center text-white shadow lg:flex lg:h-screen lg:absolute xl:text-5xl">
      <%= link_to :root do %>
        <h1 class="font-semibold text-4xl text-cyan-500"><i class="fas fa-star-of-life mr-3"></i>AppointMate</h1>
      <% end %>
    </div>
  </div>
  <div class="bg-neutral-50 h-full">
    <div class="relative z-20 px-6 mx-auto h-full lg:px-12 max-w-lg flex justify-center flex-col">
      <div class="mb-4 xl:mt-8">
        <div class="mt-6 mb-4 lg:mt-0">
          <%= link_to "Back", root_path, class: "text-gray-600 underline flex items-center hover:text-gray-700 hover:no-underline" %>
        </div>

        <% unless title.blank? %>
          <h2 class="pt-6 font-sans text-3xl font-black leading-tight"><%= title %></h2>
        <% end %>

        <% unless subtitle.blank? %>
          <p class="text-gray-600 mt-3"><%= subtitle %></p>
        <% end %>
      </div>

      <%= yield %>

      <% unless current_hospital %>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>

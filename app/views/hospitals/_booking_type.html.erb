<div id="<%= dom_id booking_type %>">
  <%= link_to new_hospital_booking_path(booking_link: @hospital.booking_link, booking_type: booking_type.id),
    class: "h-full p-6 border shadow-xl rounded-xl block hover:shadow-lg transition ease-in duration-300 relative overflow-hidden flex flex-col" do %>
    <div class="h-1 w-full absolute top-0 left-0 right-0" style="background-color: <%= booking_type.color %>"></div>
    <h3 class="font-medium text-2xl"><%= booking_type.name %></h3>
    <p class="text-gray-500">View booking page</p>
    <p>~ <%= duration(booking_type) %></p>

    <% if booking_type.payment_required? %>
      <div class="flex flex-col mt-3 pt-3 h-full justify-end">
        <p>
          <strong>Payment required</strong>
        </p>
        <p>
          <strong>Price:</strong>
          <%= number_to_currency(booking_type.price) %>
        </p>
      </div>
    <% end %>
  <% end %>
</div>

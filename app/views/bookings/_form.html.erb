<div class="container">
  <div class="row">
    <div class="col-12">
      <%= form_with(model: booking) do |form| %>
        <% if booking.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

            <ul>
              <% booking.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-floating mb-3">
          <%= form.number_field :status, autocomplete: "bookingStatus", id: "bookingStatus", class:"form-control", placeholder: "" %>
          <label for="bookingStatus">Booking Status</label>
        </div>

        <div class="form-floating mb-3">
          <%= form.text_field :first_name, autofocus: true, autocomplete: "first_name", id: "floatingFirstName", class:"form-control", placeholder: "", required: true %>
          <label for="floatingFirstName">First name</label>
        </div>

        <div class="form-floating mb-3">
          <%= form.text_field :last_name, autocomplete: "last_name", id: "floatingLastName", class:"form-control", placeholder: "", required: true %>
          <label for="floatingLastName">Last name</label>
        </div>

        <div class="form-floating mb-3">
          <%= form.email_field :email, autocomplete: "email", id: "floatingEmail", class:"form-control", placeholder: "", required: true %>
          <label for="floatingEmail">Email address</label>
        </div>

        <div class="form-floating mb-3">
          <%= form.datetime_field :start_at, autocomplete: "bookingStartAt", id: "bookingStartAt", class:"form-control", placeholder: "", required: true  %>
          <label for="bookingStartAt">Start at</label>
        </div>

        <div class="form-floating mb-3">
          <%= form.datetime_field :end_at, autocomplete: "bookingEndAt", id: "bookingEndAt", class:"form-control", placeholder: "", required: true  %>
          <label for="bookingEndAt">End at</label>
        </div>

        <div class="form-check text-start my-3">
          <%= form.check_box :customer_paid, class: "form-check-input", id: "customerPaid", value: "customer-paid" %>
          <label for="customerPaid" class="form-check-label">Customer Paid</label>
        </div>

        <div class="actions mb-3">
          <%= form.submit nil, class: "btn btn-primary py-2"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
